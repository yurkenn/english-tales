rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Posts collection - everyone can read, authenticated users can write
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users collection - public read (for profiles), only owner can write own data
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      match /{subcollection}/{docId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Global fallback - deny all other writes
    match /{collection}/{docId} {
      allow read: if true;
      allow write: if false; 
    }
  }
}
